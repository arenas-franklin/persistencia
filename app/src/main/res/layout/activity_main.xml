<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#457EAA">
    <TextView
            android:text="Pode dirigir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:textSize="36sp"
            android:textColor="#070707" android:fontFamily="cursive"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtNome" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="32dp"
            android:textAlignment="center" android:hint="Diga seu nome guri: "
            style="@android:style/Widget.AutoCompleteTextView" android:fontFamily="cursive"/>
    <Button
            android:text="veja se vc pode dirigir "
            android:background="@drawable/bordabtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:id="@+id/btnEntrar" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/edtNome" app:layout_constraintEnd_toEndOf="@+id/edtNome"
            app:layout_constraintStart_toStartOf="@+id/edtNome" android:fontFamily="cursive" android:textStyle="bold"/>
    <ImageView
            android:layout_width="163dp"
            android:layout_height="363dp"
            app:srcCompat="@drawable/logo"
            android:id="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/btnEntrar" app:layout_constraintStart_toStartOf="@+id/btnEntrar"
            android:layout_marginTop="104dp" app:layout_constraintEnd_toEndOf="@+id/btnEntrar"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>